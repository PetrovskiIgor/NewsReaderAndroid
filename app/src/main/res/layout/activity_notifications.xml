<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.teamwe.personalizedreader.activities.NotificationsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarNotifications"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <RelativeLayout
                android:id="@+id/layoutNext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right">

                <ImageView
                    android:id="@+id/btnNext"
                    android:layout_width="@dimen/btn_next_width"
                    android:layout_height="@dimen/btn_next_width"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtNext"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/arrow_right"
                    android:layout_marginRight="@dimen/btn_next_margin_right"
                    android:tint="@color/sysWhite"
                    />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/txtNotif"
            android:text="@string/notifications_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_category_size"/>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/idSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtNotif"
            android:checked="true"
            android:layout_marginLeft="30dp"/>

    </RelativeLayout>



</RelativeLayout>
